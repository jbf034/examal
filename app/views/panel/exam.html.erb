<div class="page-header">
  <h2><%= @exam.name %></h2>
  <h4><%= @subject.title%></h4>
</div>
<%= form_tag do %>
<%= hidden_field_tag :subject_id, params[:subject_id] %>  
<table class="table">
 <% count=0 
 	serize=[]
 	("A".."Z").each{|x| serize<<x}
 %>
	<% @subject.questions.each do |question| %>
	<tr>
		<td rowspan="2" width="60px"><%= count+1 %></td>
		<td><%= question.title %></td>
	</tr>

	<tr>
		<td>
			<% options=question.options.split(",")
				index=-1
			 %>
			 	<% options.each do |option| %>
					<div>
						<label>
						<% if question.multiple? %>
							<%= check_box_tag "answer[#{question.id}][]",option %>
						<% else %>
							<%= radio_button_tag "answer[#{question.id}][]",option %>
							
						<% end %>
						<%= "#{serize[index+=1]}： #{option}" %>
						</label>
					</div>
					
			 	<% end %>

		</td>
	</tr>
	<% count+=1 %>
	<% end %>
</table>
<%= submit_tag "交卷",:class=>"btn btn-primary btn-large",data: { confirm: '确定交卷吗？如果有没填写的题目会算作错误哦～' } %>
<% end %>