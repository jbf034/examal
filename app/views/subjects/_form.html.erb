<%= form_for(@subject,html:{class:"form-inline"}) do |f| %>
<% if @subject.errors.any? %>
  <div class="alert alert-block alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h5>您填写的表单有<%= @subject.errors.count %>个错误需要修正：</h5>
    <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
  </div>
  <% end %>


  <div class="field">
    <%= f.label :title,"试卷标题" %><br>
    <%= f.text_field :title, class: 'span6' %>
  </div>
 
  <div class="field">
    <%= f.label :remark,"备注" %><br>
    <%= f.text_area :remark %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "提交",:class=> "btn btn-success" %>
  </div>
<% end %>
